---
import Navigation from "../components/navigation/Navigation.astro";
import '../styles/global.styles.css';
import Footer from '../components/footer/Footer.astro';
import SEO from '../components/SEO.astro';
import BackToTop from '../components/backToTop/BackToTop.astro';

interface Props {
  pageTitle?: string;
  description?: string;
  canonicalPath?: string;
  image?: string;
  noindex?: boolean;
  ogType?: 'website' | 'article' | 'product';
  pageSchema?: Record<string, any> | Array<Record<string, any>>;
}

const {
  pageTitle,
  description,
  canonicalPath,
  image,
  noindex,
  ogType,
  pageSchema
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <SEO
      pageTitle={pageTitle}
      description={description}
      canonicalPath={canonicalPath}
      image={image}
      noindex={noindex}
      ogType={ogType}
      pageSchema={pageSchema}
    />
    <script async src="https://www.googletagmanager.com/gtag/js?id=G-F4MGB19N8S"></script>
    <script is:inline>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag('js', new Date());
      gtag('config', 'G-F4MGB19N8S');
    </script>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Poiret+One&family=Shadows+Into+Light&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
  </head>
  <body>
    <div class="page-wrapper">
      <Navigation />
      <main class="content">
        <slot />
      </main>
      <BackToTop />
      <Footer />
    </div>
  </body>

  <style>
    html,
    body {
      margin: 0;
      width: 100%;
      height: 100%;
    }
    
    .page-wrapper {
      min-height: 100vh;
      display: flex;
      flex-direction: column;
    }
    
    .content {
      flex: 1;
    }
  </style>
</html>
